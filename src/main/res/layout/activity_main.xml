<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:hint="0"
            android:gravity="center|end"
            android:layout_marginTop="110dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="30dp"
            android:textSize="30dp"
            android:maxLength="14"
            />
        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="30dp"

            />

        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_back_space"
            android:text=""
            android:textSize="33dp"
            android:layout_below="@+id/button_power"
            android:layout_toEndOf="@+id/button9"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_baseline_keyboard_backspace_24"
            />
        <View
            android:layout_width="360dp"
            android:layout_height="0.3dp"
            android:background="@color/colorGreen"
            android:layout_below="@id/sign"
            android:layout_marginStart="20dp"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_sin"
            android:text="sin"
            android:textSize="25dp"
            android:layout_below="@+id/input"
            android:layout_marginStart="19dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_corners"

            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_cos"
            android:text="cos"
            android:textSize="25dp"
            android:layout_below="@+id/input"
            android:layout_toEndOf="@+id/button_sin"
            android:layout_marginStart="15dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_corners"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_tan"
            android:text="tan"
            android:textSize="25dp"
            android:layout_below="@+id/input"
            android:layout_toEndOf="@+id/button_cos"
            android:layout_marginStart="15dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_corners"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_power"
            android:text="xⁿ"
            android:textSize="25dp"
            android:layout_below="@+id/input"
            android:layout_toEndOf="@+id/button_tan"
            android:layout_marginStart="15dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_corners"
            />



        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button7"
            android:text="7"
            android:textSize="33dp"
            android:layout_below="@+id/button_sin"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button8"
            android:text="8"
            android:textSize="33dp"
            android:layout_below="@+id/button_cos"
            android:layout_toEndOf="@+id/button7"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"

            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button9"
            android:text="9"
            android:textSize="33dp"
            android:layout_below="@+id/button_tan"
            android:layout_toEndOf="@+id/button8"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_divid"
            android:text="÷"
            android:textSize="33dp"
            android:layout_below="@+id/button_back_space"
            android:layout_toEndOf="@+id/button9"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:textColor="@color/colorGreen"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_multipl"
            android:text="x"
            android:textSize="33dp"
            android:layout_below="@+id/button_divid"
            android:layout_toEndOf="@+id/button9"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:textColor="@color/colorGreen"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_sub"
            android:text="-"
            android:textSize="33dp"
            android:layout_below="@+id/button_multipl"
            android:layout_toEndOf="@+id/button9"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:textColor="@color/colorGreen"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_add"
            android:text="+"
            android:textSize="33dp"
            android:layout_below="@+id/button_sub"
            android:layout_toEndOf="@+id/button9"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corners"
            android:textColor="@color/colorGreen"
            />


        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button4"
            android:text="4"
            android:textSize="33dp"
            android:layout_below="@+id/button7"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button5"
            android:text="5"
            android:textSize="33dp"
            android:layout_below="@+id/button8"
            android:layout_toEndOf="@+id/button4"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button6"
            android:text="6"
            android:textSize="33dp"
            android:layout_below="@+id/button9"
            android:layout_toEndOf="@+id/button5"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button1"
            android:text="1"
            android:textSize="33dp"
            android:layout_below="@+id/button4"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button2"
            android:text="2"
            android:textSize="33dp"
            android:layout_below="@+id/button5"
            android:layout_toEndOf="@+id/button1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button3"
            android:text="3"
            android:textSize="33dp"
            android:layout_below="@+id/button6"
            android:layout_toEndOf="@+id/button2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/buttonClear"
            android:text="C"
            android:textSize="33dp"
            android:layout_below="@+id/button1"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:textColor="@color/colorGreen"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button0"
            android:text="0"
            android:textSize="33dp"
            android:layout_below="@+id/button2"
            android:layout_toEndOf="@+id/buttonClear"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:id="@+id/button_dotte"
            android:text="."
            android:textSize="33dp"
            android:layout_below="@+id/button3"
            android:layout_toEndOf="@+id/button0"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:id="@+id/button_equal"
            android:text="="
            android:textSize="33dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="42dp"
            android:background="@drawable/rounded_corners"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorGreen"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>